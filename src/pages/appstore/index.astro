---
import Hero from '~/components/widgets/Hero.astro';
import PageLayout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import AppItem from '~/components/appstore/AppItem.astro';

const modules = await getCollection('appstore');
---

<PageLayout>
  <Hero
    tagline="AppStore"
    title="[This page will highlight all the cool plugins and webapps.]"
    subtitle="[When it's done it will show recent updates, popular plugins and allow you to browse by category or tag.]"
  />
  <ul class="grid grid-cols-3 gap-4 p-4 sm:p-6 mx-auto lg:p-8 max-w-7xl">
    {modules.map((module) => <AppItem {...module.data} />)}
  </ul></PageLayout
>
